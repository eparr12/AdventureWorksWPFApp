            <StackPanel  Grid.Row="7" 
                         Grid.Column="2" 
                         Orientation="Vertical"
                         Margin="20">

                <TextBlock Text="Vacation Hours"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="VacationHours" 
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <StackPanel  Grid.Row="7" 
                         Grid.Column="3" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Start Date"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <DatePicker FontFamily="Montserrat" 
                            FontSize="20"
                            Foreground="White"
                            Background="Transparent" 
                            HorizontalAlignment="Stretch"
                            MinWidth="150" 
                            Height="30"
                            Style="{StaticResource DatePickerStyle2}"
                            x:Name="StartDate"/>
            </StackPanel>

            <!-- Row 8-->
            <StackPanel  Grid.Row="8" 
                         Grid.Column="0" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Address"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="Address"
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <StackPanel Grid.Row="8" 
                        Grid.Column="1" 
                        Orientation="Vertical" 
                        Margin="20">

                <TextBlock Text="Verify LoginID" 
                           FontWeight="Medium"
                           Foreground="DarkGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="VerifyLoginID" 
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <StackPanel  Grid.Row="8" 
                         Grid.Column="2" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Sick Leave Hours"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="SickLeaveHours"
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <!-- Row 9 -->
            <Button x:Name="Submit"
                    BorderThickness="0"
                    Content="SUBMIT"
                   Foreground="White"
                    FontSize="20"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Row="9"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Top"
                    Margin="0,50,0,40">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#462AD8"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#28AEED"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="200" 
                                Height="50"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}">
                            
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </ScrollViewer>
</UserControl>
