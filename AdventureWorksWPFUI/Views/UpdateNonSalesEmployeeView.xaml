<UserControl x:Class="AdventureWorksWPFUI.Views.UpdateNonSalesEmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdventureWorksWPFUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1200">

    <ScrollViewer VerticalScrollBarVisibility="Visible" 
                  HorizontalScrollBarVisibility="Auto">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 0 -->
            <StackPanel Grid.Row="0" 
                        Grid.Column="1" 
                        Grid.ColumnSpan="2"
                        Orientation="Vertical"
                        Margin="100,10,100,50"
                        MaxWidth="300">
                
                <TextBlock Text="Employee Name"
                           Foreground="DarkGray" 
                           FontSize="14" 
                           FontWeight="Medium"
                           FontFamily="Montserrat" 
                           TextAlignment="Center" 
                           HorizontalAlignment="Left"/>

                <ComboBox FontFamily="Montserrat" 
                          FontSize="20" 
                          BorderThickness="0,0,0,1"
                          Foreground="White" 
                          Background="Transparent" 
                          HorizontalAlignment="Stretch"
                          MinWidth="150" 
                          Height="30" 
                          Style="{DynamicResource ComboBoxStyle1}"
                          IsTextSearchCaseSensitive="False" 
                          IsTextSearchEnabled="True"
                          x:Name="EmployeeFullNames" 
                          DisplayMemberPath="FullName">

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#FF2C1B88"/>
                            <Setter Property="BorderBrush" Value="#FF2C1B88"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>

            <!-- Row 1-->
            <StackPanel Grid.Row="1" 
                        Grid.Column="0" 
                        Orientation="Vertical"
                        Margin="20,5,20,20">

                <TextBlock Text="Title" 
                           Foreground="DarkGray" 
                           FontSize="14" 
                           FontWeight="Medium"
                           FontFamily="Montserrat" 
                           TextAlignment="Center" 
                           HorizontalAlignment="Left"/>

                <ComboBox FontFamily="Montserrat" 
                          FontSize="20" 
                          BorderThickness="0,0,0,1"
                          Foreground="White" 
                          Background="Transparent" 
                          HorizontalAlignment="Stretch"
                          MinWidth="150" 
                          Height="30"
                          x:Name="Titles" 
                          SelectedIndex="0">

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#FF2C1B88"/>
                            <Setter Property="BorderBrush" Value="#FF2C1B88"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="1" 
                        Grid.Column="1" 
                        Orientation="Vertical" 
                        Margin="20,5,20,20">

                <TextBlock Text="City"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="City"
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <StackPanel  Grid.Row="1" 
                         Grid.Column="2" 
                         Orientation="Vertical" 
                         Margin="20,5,20,20">

                <TextBlock Text="Job Title"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="JobTitle"
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <StackPanel Grid.Row="1" 
                        Grid.Column="3" 
                        Orientation="Vertical" 
                        Margin="20,5,20,20">

                <TextBlock Text="Person Type"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <ComboBox FontFamily="Montserrat" 
                          FontSize="20" 
                          BorderThickness="0,0,0,1"
                          Foreground="White" 
                          Background="Transparent" 
                          HorizontalAlignment="Stretch"
                          MinWidth="150" 
                          Height="30" 
                          Style="{DynamicResource ComboBoxStyle1}"
                          x:Name="PersonTypes" 
                          SelectedIndex="0">

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#FF2C1B88"/>
                            <Setter Property="BorderBrush" Value="#FF2C1B88"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>
            
            <!-- Row 2-->
            <StackPanel Grid.Row="2" 
                        Grid.Column="0" 
                        Orientation="Vertical" 
                        Margin="20">

                <TextBlock Text="First Name" 
                           Foreground="DarkGray" 
                           FontSize="14" 
                           FontWeight="Medium"
                           FontFamily="Montserrat" 
                           TextAlignment="Center" 
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="FirstName" 
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <StackPanel Grid.Row="2" 
                        Grid.Column="1" 
                        Orientation="Vertical"
                        Margin="20">

                <TextBlock Text="State/Province" 
                           Foreground="DarkGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left" 
                           FontWeight="Medium"/>

                <ComboBox FontFamily="Montserrat" 
                          FontSize="20" 
                          BorderThickness="0,0,0,1"
                          Foreground="White" 
                          Background="Transparent" 
                          HorizontalAlignment="Stretch"
                          MinWidth="150" 
                          Height="30" 
                          Style="{DynamicResource ComboBoxStyle1}"
                          IsTextSearchCaseSensitive="False" 
                          IsTextSearchEnabled="True"
                          x:Name="StateProvinceIDs" 
                          DisplayMemberPath="Name">

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#FF2C1B88"/>
                            <Setter Property="BorderBrush" Value="#FF2C1B88"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>

            <StackPanel  Grid.Row="2" 
                         Grid.Column="2" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Birth Date"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <DatePicker FontFamily="Montserrat" 
                            FontSize="20"
                            Foreground="White"
                            Background="Transparent" 
                            HorizontalAlignment="Stretch"
                            MinWidth="150" 
                            Height="30"
                            Style="{StaticResource DatePickerStyle2}"
                            x:Name="BirthDate"/>
            </StackPanel>

            <StackPanel  Grid.Row="2" 
                         Grid.Column="3" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Current Employee" 
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"
                           Margin="30,0,0,0"/>

                <StackPanel Background="Transparent" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Stretch" 
                            Margin="30,0,20,0" 
                            MinWidth="150">

                    <RadioButton GroupName="Current" 
                                 FontFamily="Montserrat" 
                                 FontSize="20" 
                                 x:Name="YesCurrent"
                                 Foreground="White" 
                                 VerticalAlignment="Bottom" 
                                 Margin="0,0,40,0">
                        Yes
                    </RadioButton>

                    <RadioButton GroupName="Current" 
                                 FontFamily="Montserrat" 
                                 FontSize="20" 
                                 x:Name="NoCurrent"
                                 Foreground="White" 
                                 VerticalAlignment="Bottom" 
                                 HorizontalAlignment="Right">
                        No
                    </RadioButton>
                </StackPanel>
            </StackPanel>

            <!-- Row 3-->
            <StackPanel  Grid.Row="3" 
                         Grid.Column="0" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Middle Name"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="MiddleName" 
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <StackPanel Grid.Row="3" 
                        Grid.Column="1" 
                        Orientation="Vertical" 
                        Margin="20">

                <TextBlock Text="Postal Code" 
                           FontWeight="Medium"
                           Foreground="DarkGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="PostalCode" 
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <StackPanel  Grid.Row="3" 
                         Grid.Column="2" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Marital Status"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <ComboBox FontFamily="Montserrat" 
                          FontSize="20" 
                          BorderThickness="0,0,0,1"
                          Foreground="White" 
                          Background="Transparent" 
                          HorizontalAlignment="Stretch"
                          MinWidth="150" 
                          Height="30" 
                          Style="{DynamicResource ComboBoxStyle1}"
                          x:Name="Maritals" 
                          SelectedIndex="0">

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#FF2C1B88"/>
                            <Setter Property="BorderBrush" Value="#FF2C1B88"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>

            <StackPanel  Grid.Row="3" 
                         Grid.Column="3" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Pay Rate"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="PayRate"
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <!-- Row 4-->
            <StackPanel  Grid.Row="4" 
                         Grid.Column="0" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Last Name"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="LastName" 
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <StackPanel  Grid.Row="4" 
                         Grid.Column="1" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Address Type"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <ComboBox FontFamily="Montserrat" 
                          FontSize="20" 
                          BorderThickness="0,0,0,1"
                          Foreground="White" 
                          Background="Transparent" 
                          HorizontalAlignment="Stretch"
                          MinWidth="150" 
                          Height="30" 
                          Style="{DynamicResource ComboBoxStyle1}"
                          x:Name="AddressTypeIDs" 
                          SelectedIndex="0">

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#FF2C1B88"/>
                            <Setter Property="BorderBrush" Value="#FF2C1B88"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="4" 
                        Grid.Column="2" 
                        Orientation="Vertical" 
                        Margin="20">

                <TextBlock Text="Gender"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <ComboBox FontFamily="Montserrat" 
                          FontSize="20" 
                          BorderThickness="0,0,0,1"
                          Foreground="White" 
                          Background="Transparent" 
                          HorizontalAlignment="Stretch"
                          MinWidth="150" 
                          Height="30" 
                          Style="{DynamicResource ComboBoxStyle1}"
                          x:Name="Genders" 
                          SelectedIndex="0">

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#FF2C1B88"/>
                            <Setter Property="BorderBrush" Value="#FF2C1B88"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>

            <StackPanel  Grid.Row="4" 
                         Grid.Column="3" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Pay Frequency"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <ComboBox FontFamily="Montserrat" 
                          FontSize="20" 
                          BorderThickness="0,0,0,1"
                          Foreground="White" 
                          Background="Transparent" 
                          HorizontalAlignment="Stretch"
                          MinWidth="150" 
                          Height="30" 
                          Style="{DynamicResource ComboBoxStyle1}"
                          x:Name="PayFrequencys"
                          SelectedIndex="0">

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#FF2C1B88"/>
                            <Setter Property="BorderBrush" Value="#FF2C1B88"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>

            <!-- Row 5-->
            <StackPanel  Grid.Row="5" 
                         Grid.Column="0" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Suffix"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <ComboBox FontFamily="Montserrat" 
                          FontSize="20" 
                          BorderThickness="0,0,0,1"
                          Foreground="White" 
                          Background="Transparent" 
                          HorizontalAlignment="Stretch"
                          MinWidth="150" 
                          Height="30" 
                          Style="{DynamicResource ComboBoxStyle1}"
                          x:Name="Suffixs"
                          SelectedIndex="0">

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#FF2C1B88"/>
                            <Setter Property="BorderBrush" Value="#FF2C1B88"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>

            <StackPanel  Grid.Row="5" 
                         Grid.Column="1" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Email Address"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="EmailAddress"
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <StackPanel Grid.Row="5" 
                        Grid.Column="2" 
                        Orientation="Vertical"
                        Margin="20">

                <TextBlock Text="Hire Date"
                           Foreground="DarkGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left" 
                           FontWeight="Medium"/>

                <DatePicker FontFamily="Montserrat" 
                            FontSize="20"
                            Foreground="White"
                            Background="Transparent" 
                            HorizontalAlignment="Stretch"
                            MinWidth="150" 
                            Height="30"
                            Style="{StaticResource DatePickerStyle2}"
                            x:Name="HireDate"/>
            </StackPanel>

            <StackPanel  Grid.Row="5" 
                         Grid.Column="3" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Department"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <ComboBox FontFamily="Montserrat" 
                          FontSize="20" 
                          BorderThickness="0,0,0,1"
                          Foreground="White" 
                          Background="Transparent" 
                          HorizontalAlignment="Stretch"
                          MinWidth="150" 
                          Height="30" 
                          Style="{DynamicResource ComboBoxStyle1}"
                          IsTextSearchCaseSensitive="False" 
                          IsTextSearchEnabled="True"
                           x:Name="DepartmentIDs" 
                          DisplayMemberPath="Name">

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#FF2C1B88"/>
                            <Setter Property="BorderBrush" Value="#FF2C1B88"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>

            <!-- Row 6-->
            <StackPanel  Grid.Row="6" 
                         Grid.Column="0" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Phone Number"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="PhoneNumber"
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <StackPanel  Grid.Row="6" 
                         Grid.Column="1" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="National ID"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <TextBox x:Name="NationalID"
                         FontSize="20" 
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="30" 
                         MinWidth="150"
                         HorizontalAlignment="Stretch" 
                         Background="Transparent" 
                         VerticalContentAlignment="Bottom"/>
            </StackPanel>

            <StackPanel  Grid.Row="6" 
                         Grid.Column="2" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Salaried" 
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"
                           Margin="30,0,0,0"/>

                <StackPanel Background="Transparent" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Stretch" 
                            Margin="30,0,20,0" 
                            MinWidth="150">

                    <RadioButton GroupName="Salaried" 
                                 FontFamily="Montserrat" 
                                 FontSize="20" 
                                 x:Name="YesSalaried"
                                 Foreground="White" 
                                 VerticalAlignment="Bottom" 
                                 Margin="0,0,40,0">
                        Yes
                    </RadioButton>

                    <RadioButton GroupName="Salaried" 
                                 FontFamily="Montserrat" 
                                 FontSize="20" 
                                 x:Name="NoSalaried"
                                 Foreground="White" 
                                 VerticalAlignment="Bottom" 
                                 HorizontalAlignment="Right">
                        No
                    </RadioButton>
                </StackPanel>
            </StackPanel>

            <StackPanel  Grid.Row="6" 
                         Grid.Column="3" 
                         Orientation="Vertical" 
                         Margin="20">

                <TextBlock Text="Shift"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"
                           Margin="30,0,0,0"/>

                <StackPanel Background="Transparent" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Stretch"
                            MinWidth="150" Margin="30,0,0,0" >

                    <RadioButton GroupName="Shift" 
                                 FontFamily="Montserrat" 
                                 FontSize="20" 
                                 x:Name="FirstShift"
                                 Foreground="White" 
                                 VerticalAlignment="Bottom" 
                                 Margin="0,0,12,0">
                                 1st
                    </RadioButton>

                    <RadioButton GroupName="Shift" 
                                 FontFamily="Montserrat" 
                                 FontSize="20" 
                                 Margin="0,0,12,0"
                                 x:Name="SecondShift"
                                 Foreground="White" 
                                 VerticalAlignment="Bottom" 
                                 HorizontalAlignment="Right">
                                 2nd
                    </RadioButton>

                    <RadioButton GroupName="Shift" 
                                 FontFamily="Montserrat" 
                                 FontSize="20" 
                                 x:Name="ThirdShift"
                                 Foreground="White" 
                                 VerticalAlignment="Bottom" 
                                 HorizontalAlignment="Right">
                                 3rd
                    </RadioButton>
                </StackPanel>
            </StackPanel>

            <!-- Row 7-->
            <StackPanel  Grid.Row="7" 
                         Grid.Column="0" 
                         Orientation="Vertical"
                         Margin="20">

                <TextBlock Text="Phone Type"
                           FontWeight="Medium"
                           Foreground="LightGray" 
                           FontFamily="Montserrat" 
                           FontSize="14"
                           HorizontalAlignment="Left"/>

                <ComboBox FontFamily="Montserrat" 
                          FontSize="20" 
                          BorderThickness="0,0,0,1"
